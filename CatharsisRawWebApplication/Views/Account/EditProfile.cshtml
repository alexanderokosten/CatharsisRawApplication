@model EditUserViewModel;
<form asp-action="EditProfile" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="rounded-input" />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">UserName </label>
        <input type="text" asp-for="UserName" class="form-control rounded-input" />
    </div><br>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email </label>
        <input type="text" asp-for="Email" class="form-control rounded-input" />
    </div><br>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Телефон: </label>
        <input type="text" asp-for="PhoneNumber" class="form-control rounded-input" />
    </div><br>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="button" />
    </div>
</form>
